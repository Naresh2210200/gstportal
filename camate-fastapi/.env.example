# FastAPI Microservice Environment Variables
# Copy this file to .env and fill in your values

# Cloudflare R2 Storage (same bucket as Django)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=camate-files
R2_ENDPOINT_URL=

# Django backend (for internal calls)
DJANGO_INTERNAL_URL=http://localhost:8000
DJANGO_SERVICE_SECRET=

# CORS
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:8000"]

# GST Portal API (optional - for live GSTIN verification)
GST_API_BASE_URL=https://api.gst.gov.in
GST_API_KEY=
